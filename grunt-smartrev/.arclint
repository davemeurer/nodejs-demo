{
    "linters": {
        "jshint": {
            "type": "script-and-regex",
            "include": "(\\.js$)"
        },
        "text": {
            "type": "text",
            "include": "(\\.*)",
            "severity": {
                "Line Too Long": "advice"
            }
        },
        "filename": {
            "type": "filename",
            "include": "(.*)"
        },
        "spelling": {
            "type": "spelling",
            "include": "(.*)"
        }
    }
}
